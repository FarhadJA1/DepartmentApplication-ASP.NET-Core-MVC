@model DepartmentGetVM
@{
    ViewData["Title"] = "Detail";
   
}

<div class="container">
    <h1>Department details</h1>

    <h3 class="mt-3" style="font-weight:bolder;font-family:sans-serif">Name: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.Name</span> </h3>
    <h3 class="mt-3" style="font-weight: bolder; font-family: sans-serif">Address: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.Address</span> </h3>

    <h1 class="mt-4">Employees</h1>
    @if (Model.Employees.Count > 0)
    {
        @foreach (var employee in Model.Employees)
        {
            <h3 class="mt-3" style="font-weight: bolder; font-family: sans-serif">Fullname: <span style="color: grey; font-size: 20px; font-weight: lighter">@employee.Fullname</span> </h3>
        }
    }
    else
    {
        <h3 class="mt-3 text-danger">No employee has been found</h3>
    }


    <a asp-action="Index" class="btn btn-outline-warning mt-3">Go back</a>
</div>

