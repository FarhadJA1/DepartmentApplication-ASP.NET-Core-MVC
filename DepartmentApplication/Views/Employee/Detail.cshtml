@model EmployeeGetVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1>Employee details</h1>

    <h3 class="mt-3" style="font-weight:bolder;font-family:sans-serif">Fullname: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.Fullname</span> </h3>
    <h3 class="mt-3" style="font-weight: bolder; font-family: sans-serif">Department: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.DepartmentName</span> </h3>

    
    <a asp-action="Index" class="btn btn-outline-warning mt-3">Go back</a>
</div>

