@model EmployeeUpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3>Update Employee</h3>
                <form class="forms-sample" method="post" asp-action="Update">
                    <div class="form-group">
                        <label asp-for="Fullname"></label>
                        <input class="form-control" asp-for="Fullname">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                       
                        <p class="my-3">Current Department: <span class="text-danger">@Model.DepartmentName</span></p>

                        <label asp-for="DepartmentId">Departments: </label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.departments">
                        </select>
                        <span class="text-danger" asp-validation-for="DepartmentId"></span>

                    </div>
                    <button type="submit" class="btn btn-outline-success me-2">Submit</button>
                    <a class="btn btn-outline-warning" style="text-decoration:none" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

